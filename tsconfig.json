{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots": ["./types"]
  },
  "exclude": ["dist", "prisma", "tests", "./dist/**/*", "node_modules"]
}
